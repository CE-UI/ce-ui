{
	"name": "ce-ui",
	"version": "0.0.1",
	"description": "基于Vue 2.x 的UI组件库",
	"main": "lib/ce-ui.common.js",
	"style": "lib/theme-chalk/ce-ui-index.css",
	"homepage": "https://github.com/Vapor-Team/ce-ui",
	"author": "ce-ui <jackblogs@163.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Vapor-Team/ce-ui.git"
	},
	"scripts": {
		"init": "npm install commitizen -g && commitizen init cz-conventional-changelog --save-dev --save-exact && npm run bootstrap",
		"bootstrap": "npm install && cd ./packages/theme-chalk && npm install",
		"dev": "npm run build:entry && npm run build:locale && vue-cli-service serve",
		"lint": "vue-cli-service lint",
		"lib": "vue-cli-service build --target lib --name CeUi --dest lib packages/index.js",
		"clean": "rimraf lib && rimraf packages/*/lib",
		"dev:style": "gulp --gulpfile packages/theme-chalk/gulpfile.js",
		"build:docs": "vue-cli-service build",
		"build:entry": "node build/build-entry.js ",
		"build:lib": "node build/build-lib.js",
		"build:style": "gulp build --gulpfile packages/theme-chalk/gulpfile.js && cp-cli packages/theme-chalk/lib lib/theme-chalk",
		"publish:docs": "node build/publish-docs.js",
		"release": "sh build/release.sh",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"build:locale": "node build/locale"
	},
	"dependencies": {
		"vue": "^2.5.22",
		"vue-i18n": "^8.10.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.4.0",
		"@vue/cli-plugin-eslint": "^3.4.0",
		"@vue/cli-service": "^3.4.0",
		"@vue/eslint-config-standard": "^4.0.0",
		"babel-eslint": "^10.0.1",
		"commitizen": "^3.0.7",
		"cp-cli": "^2.0.0",
		"cssnano": "^4.1.10",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^5.8.0",
		"eslint-plugin-vue": "^5.2.2",
		"eslint-plugin-html": "^5.0.3",
		"eslint-plugin-react": "^7.12.4",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.2",
		"fs-extra": "^7.0.1",
		"gh-pages": "^2.0.1",
		"highlight.js": "^9.14.2",
		"lint-staged": "^8.1.0",
		"markdown-it-container": "^2.0.0",
		"markdown-it-decorate": "^1.2.2",
		"markdown-it-task-checkbox": "^1.0.6",
		"shelljs": "^0.8.3",
		"signale": "^1.4.0",
		"uppercamelcase": "^3.0.0",
		"vue-markdown-loader": "^2.4.1",
		"vue-router": "^3.0.1",
		"vue-template-compiler": "^2.5.21",
		"extract-text-webpack-plugin": "^3.0.2"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.js,!build/*": [
			"vue-cli-service lint",
			"git add"
		],
		"*.vue": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
