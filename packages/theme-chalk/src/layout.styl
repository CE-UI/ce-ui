@import './common/*'
@import './mixins/*'

[class*='ce-col-']
  float left
  box-sizing border-box

for num in (0 .. 24)
  .ce-col-{num}
    width (1 / 24 * num * 100) * 1%

  .ce-col-offset-{num}
    margin-left (1 / 24 * num * 100) * 1%

  .ce-col-pull-{num}
    position relative
    right (1 / 24 * num * 100) * 1%

  .ce-col-push-{num}
    position relative
    left (1 / 24 * num * 100) * 1%

.ce-col-0
  display none

.foo
  utils-clearfix()
  utils-vertical-center()

  +res-spec(sm-only)
    font-size 22px

  .dd
    .dd22
      color #ccc

    +when(1)
      font-size 22px
