@import '../mixins/var'
@import '../mixins/mixin'

@b tabs-box
  width 100%

  @when border
    border 1px solid $tabs-border-color

  @when shadow
    box-shadow 4px 6px $shadow-color

@b tabs-header
  width 100%
  display flex
  justify-content flex-start
  align-items center
  height $tabs-nav-height
  min-height $tabs-nav-height-sm

  @m item
    padding $tabs-nav-item-padding
    font-size $tabs-nav-font-size
    background-color $tabs-nav-item-bg-color
