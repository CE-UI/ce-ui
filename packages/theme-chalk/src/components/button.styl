@import '../common/var'

@b button
  display inline-flex
  box-sizing border-box
  font-size $--font-size-base
  border-radius $--button-radius-base
  padding 12px 20px
  align-items center
  justify-content center
  cursor pointer
  outline none
  line-height 1

  @m default
    font-size $--button-size-medium
    background-color #fff
    padding 12px 20px
    border 1px solid $color-normal

    @when round
      border-radius 36px

    @when circle
      border-radius $--button-radius-circle
      padding 10px

      @when loading
        padding 16px

    @when disabled
      background-color #fff
      color $--color-disabled
      border 1px solid $--color-disabled
      cursor no-drop
      // pointer-events none

    @when hollow
      background-color #fff

  @m primary
    background-color $--color-primary
    color $--color-white
    border 1px solid $--color-primary

    @when round
      border-radius 36px

    @when circle
      border-radius $--button-radius-circle
      padding 10px

    @when disabled
      background-color $--color-disabled
      color $--color-white
      border 1px solid $--color-disabled
      cursor no-drop

    @when hollow
      background-color #fff
      color $--color-primary

  @m medium
    font-size $--button-size-medium
    // border-radius 32px
    padding 12px 20px

    @when round
      border-radius 36px

    @when circle
      border-radius $--button-radius-circle
      padding 10px

  @m small
    font-size $--button-size-small
    // border-radius 32px
    padding 9px 15px

    @when round
      border-radius 36px

    @when circle
      border-radius $--button-radius-circle
      padding 8px

  @m mini
    font-size $--button-size-mini
    // border-radius 36px
    padding 7px 15px

    @when round
      border-radius 36px

    @when circle
      border-radius $--button-radius-circle
      padding 6px

  @m text
    background none
    border none

  @m info
    background-color $--color-primary-light-2
    color $--color-primary
    border 1px solid $--color-primary-light-2

    @when hollow
      background-color #fff
      color $--color-primary-light-2

  @m error
    background-color $--color-danger
    color $--color-white
    border 1px solid $--color-danger

    @when hollow
      background-color #fff
      color $--color-danger

  @m success
    background-color $--color-success
    color $--color-white
    border 1px solid $--color-success

    @when hollow
      background-color #fff
      color $--color-success

  @m warning
    background-color $--color-warning
    color $--color-white
    border 1px solid $--color-warning

    @when hollow
      background-color #fff
      color $--color-warning

  @when plain
    color $--color-old-primary
    font-size $--font-size-large
    padding 0

  @when opacity
    opacity 0.6

  @when disabled
    color $--color-disabled
    cursor no-drop

  @when shadow
    box-shadow 0px 4px 12px 0px rgba(53, 86, 189, 0.3)

  @when square
    border-radius 0px

.{$namespace}-button
  .ball-spin-fade-loader
    position relative
    top -2px
    left -2px

  .ce-button__text
    display inline-block
    margin-left 20px