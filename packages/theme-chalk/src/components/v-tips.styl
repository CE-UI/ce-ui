.tooltip
  background #333
  color white
  white-space nowrap
  font-weight bold
  padding 8px 10px
  font-size 14px
  border-radius 4px
  width 0
  transition all 0.3s ease-in
  display none
  opacity 0

.tooltip[data-show]
  display inline-block
  opacity 1
  width auto

.arrow, .arrow::before
  position absolute
  width 8px
  height 8px
  z-index -1

.arrow::before
  content ''
  transform rotate(45deg)
  background #333

.tooltip[data-popper-placement^='top'] > .arrow
  bottom -4px

.tooltip[data-popper-placement^='bottom'] > .arrow
  top -4px

.tooltip[data-popper-placement^='left'] > .arrow
  right -4px

.tooltip[data-popper-placement^='right'] > .arrow
  left -4px
