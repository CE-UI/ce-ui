.v-tooltip
  background #333
  color white
  white-space nowrap
  font-weight bold
  padding 8px 10px
  font-size 14px
  border-radius 4px
  width 0
  transition all 0.3s ease-in
  display none
  opacity 0

.v-tooltip[data-show]
  display inline-block
  opacity 1
  width auto

.v-arrow, .v-arrow::before
  position absolute
  width 8px
  height 8px
  z-index -1

.v-arrow::before
  content ''
  transform rotate(45deg)
  background #333

.v-tooltip[data-popper-placement^='top'] > .v-arrow
  bottom -4px

.v-tooltip[data-popper-placement^='bottom'] > .v-arrow
  top -4px

.v-tooltip[data-popper-placement^='left'] > .v-arrow
  right -4px

.v-tooltip[data-popper-placement^='right'] > .v-arrow
  left -4px
