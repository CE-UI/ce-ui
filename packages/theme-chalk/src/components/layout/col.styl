@import '../../common/*.styl'
@import '../../mixins/mixin.styl'
@import '../../mixins/utils.styl'

$col = $namespace + '-col'

/* ce-col css 样式 */
[class*={$col}]
  float left
  box-sizing border-box

.{$col}-0
  display none

for $i in 0 .. 24
  .{$col}-{$i}
    width (1 / 24 * $i * 100) * 1%

  .{$col}-offset-{$i}
    margin-left (1 / 24 * $i * 100) * 1%

  .{$col}-pull-{$i}
    position relative
    right (1 / 24 * $i * 100) * 1%

  .{$col}-push-{$i}
    position relative
    left (1 / 24 * $i * 100) * 1%

